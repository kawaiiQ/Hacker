<article class="article-archive">
  
  <h2 class="article-title <% if (page.tag){ %> tag<% } else if (page.category){ %> category<% } %>"><%= __('all_categories') %></h2>

  <div class="categories-cloud">
    <% site.categories.sort('name').map(function(category){  %>
			<span class="post-categories">
	      <i class="icon-categories"></i>
				<a href="<%= url_for(category.path) %>" title="<%= category.name %>" rel="<%= category.length %>"><%= category.name %></a>
	    </span>
    <% }) %>
  </div>

</article>

<article class="article-archive">

  <h2 class="article-title <% if (page.tag){ %> tag<% } else if (page.category){ %> category<% } %>"><%= __('all_tags') %></h2>

  <div class="tags-cloud">
      <% site.tags.sort('name').map(function(tag){  %>
        <span class="post-tags">
          <i class="icon-tags"></i>
            <a href="<%= url_for(tag.path) %>" title="<%= tag.name %>" rel="<%= tag.length %>"><%= tag.name %></a>
        </span>
      <% }) %>
    </div>

</article>
